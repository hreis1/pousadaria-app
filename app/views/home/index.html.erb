<section id="inns" class="row">
  <h2><%= Inn.model_name.human(count: 2) %></h2>
  <hr>
  <div class="col">

    <% if @inns.any? %>
      <ul>
        <div id="mais-recentes" class="row">
          <h4>Mais recentes</h4>
          <% 3.times do |num| %>
            <% inn = @inns.pop%>
            <% if inn %>
              <div class="col-sm me-2">
                <h5 class="card-title"><%= link_to inn.trade_name, inn_path(inn) %></h5>
                <h6 class="card-subtitle mb-2 text-muted"><%= inn.city %></h6>
              </div>
            <% end %>
          <% end %>
        </div>
        <hr>
        <% @inns.each do |inn| %>
        <h5><%= link_to inn.trade_name, inn_path(inn) %></h5>
          <p><%= inn.city %></p>
        <% end %>
      </ul>
    <% else %>
      <p>Nenhuma pousada cadastrada</p>
    <% end %>
  </div>

  <% if @inns %>
    <div class="col-sm-3">
      <%= render 'menucities' %>
    </div>
  <% end %>
</section>