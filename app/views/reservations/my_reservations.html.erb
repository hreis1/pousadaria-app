<h2>Reservas</h2>

<% if @reservations.any? %>
  <% @reservations.each do |reservation| %>
    <div>
      <p><%= reservation.room.inn.trade_name %></p>
      <p><%= reservation.room.name %></p>
      <p>Data de entrada: <%= reservation.checkin.strftime("%d/%m/%Y") %></p>
      <p>Check-in: <%= reservation.room.inn.checkin_time.strftime("%H:%M") %></p>
      <p>Data de saída: <%= reservation.checkout.strftime("%d/%m/%Y") %></p>
      <p>Check-out: <%= reservation.room.inn.checkout_time.strftime("%H:%M") %></p>
      <p>Total: <%= number_to_currency(reservation.total_value) %></p>
      <p>Meios de pagamento: <%= reservation.room.inn.payment_methods %></p>
    </div>
  <% end %>
<% else %>
  <p>Você ainda não possui reservas</p>
<% end %>