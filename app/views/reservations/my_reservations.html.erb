<h2>Reservas</h2>

<% if @reservations.any? %>
  <% @reservations.each do |reservation| %>
    <div>
      <h4>Código da reserva: <%= reservation.code %></h4>
      <p><%= reservation.room.inn.trade_name %></p>
      <p><%= reservation.room.name %></p>
      <p><%= Reservation.human_attribute_name(:checkin) %>: <%= reservation.checkin.strftime("%d/%m/%Y") %></p>
      <p><%= Inn.human_attribute_name(:checkin_time) %>: <%= reservation.room.inn.checkin_time.strftime("%H:%M") %></p>
      <p><%= Reservation.human_attribute_name(:checkout) %>: <%= reservation.checkout.strftime("%d/%m/%Y") %></p>
      <p><%= Inn.human_attribute_name(:checkout_time) %>: <%= reservation.room.inn.checkout_time.strftime("%H:%M") %></p>
      <p>Total: <%= number_to_currency(reservation.total_value) %></p>
      <p><%= Reservation.human_attribute_name(:number_of_guests) %>: <%= reservation.number_of_guests %></p>
      <p><%= Inn.human_attribute_name(:payment_methods) %>: <%= reservation.room.inn.payment_methods %></p>
      <p><%= Reservation.human_attribute_name(:status) %>: <%= t(reservation.status) %></p>
      <% if reservation.pending? && reservation.checkin >= 7.days.from_now %>
        <%= button_to "Cancelar", cancel_reservation_path(reservation), method: :post, class: "btn btn-danger" %>
      <% end %>
    </div>
    <hr>
  <% end %>
<% else %>
  <p>Você ainda não possui reservas</p>
<% end %>