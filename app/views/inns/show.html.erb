<section id="inn">
  <%= render 'inn' %>

  <% if current_owner == @inn.owner %>
    <%= link_to "Editar", edit_inn_path(@inn) %>
    <%= link_to "Cadastrar Quarto", new_inn_room_path(@inn) %>
  <% end %>
  
  <section id="inn-rooms">
    <h2>Quartos</h2>

    <% if @inn.rooms.present? %>
      <% @inn.rooms.each do |room| %>
        <p><%= link_to room.name, inn_room_path(@inn, room) %></p>
      <% end %>
    <% else %>
      <p>Não há quartos cadastrados</p>
    <% end %>
  </section>

</section>