<h2>Cadastrar pousada</h2>

<% if @inn.errors.any? %>
  <div>
    <% @inn.errors.full_messages.each do |message| %>
      <p><%= message %></p>
    <% end %>
  </div>
<% end %>

<%= form_with model: @inn do |f| %>
  <div>
    <%= f.label :trade_name %>
    <%= f.text_field :trade_name %>
  </div>
  <div>
    <%= f.label :corporate_name %>
    <%= f.text_field :corporate_name %>
  </div>
  <div>
    <%= f.label :cnpj %>
    <%= f.text_field :cnpj %>
  </div>
  <div>
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>
  <div>
    <%= f.label :address_number %>
    <%= f.text_field :address_number %>
  </div>
  <div>
    <%= f.label :neighborhood %>
    <%= f.text_field :neighborhood %>
  </div>
  <div>
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>
  <div>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div>
    <%= f.label :cep %>
    <%= f.text_field :cep %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :payment_methods %>
    <%= f.text_field :payment_methods %>
  </div>
  <div>
    <%= f.label :pets_allowed %>
    <%= f.check_box :pets_allowed %>
  </div>
  <div>
    <%= f.label :polices %>
    <%= f.text_area :polices %>
  </div>
  <div>
    <%= f.label :checkin_time %>
    <%= f.time_field :checkin_time %>
  </div>
  <div>
    <%= f.label :checkout_time %>
    <%= f.time_field :checkout_time %>
  </div>
  <div>
    <%= f.submit "Cadastrar" %>
  </div>
<% end %>