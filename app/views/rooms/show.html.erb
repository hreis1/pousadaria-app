<section id="room">
  <%= render 'room', room: @room %>
</section>

  <section id="room">
    <% if current_owner == @room.inn.owner %>
      <% if @room.reservations.any? %>
        <h3><%= Reservation.model_name.human(count: @room.reservations.count) %>:</h3>
        <ul>
          <% @room.reservations.each do |r| %>
            <li class="list-group-item"><%= link_to r.code, reservation_path(r) %></li>
          <% end %>
        </ul>
      <% else %>
        <p>Não há reservas para este quarto</p>
      <% end %>
    <% end %>
  </section>
