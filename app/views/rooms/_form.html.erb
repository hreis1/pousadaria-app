<%= form_with model: [@inn, @room], class:"row" do |f| %>
  <div class="col-6 mb-3">
    <div class="col-11 mb-3">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="col-11 mb-3">
      <%= f.label :dimension %>
      <%= f.number_field :dimension, class: "form-control" %>
    </div>
    <div class="col-11 mb-3">
      <%= f.label :max_occupancy %>
      <%= f.number_field :max_occupancy, class: "form-control" %>
    </div>
    <div class="col-11 mb-3">
      <%= f.label :daily_rate %>
      <%= f.number_field :daily_rate, class: "form-control" %>
    </div>
    <div class="mt-3 col-11">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>

  <div class="col-6 mt-2">
    <div class="mb-3">
      <%= f.label :has_bathroom %>
      <%= f.check_box :has_bathroom, class: "form-check-input" %>
    </div>
    <div class="mb-3">
      <%= f.label :has_balcony %>
      <%= f.check_box :has_balcony, class: "form-check-input" %>
    </div>
    <div class="mb-3">
      <%= f.label :has_air_conditioning %>
      <%= f.check_box :has_air_conditioning, class: "form-check-input" %>
    </div>
    <div class="mb-3">
      <%= f.label :has_tv %>
      <%= f.check_box :has_tv, class: "form-check-input" %>
    </div>
    <div class="mb-3">
      <%= f.label :has_closet %>
      <%= f.check_box :has_closet, class: "form-check-input" %>
    </div>
    <div class="mb-3">
      <%= f.label :has_safe %>
      <%= f.check_box :has_safe, class: "form-check-input" %>
    </div>
    <div class="mb-3">
      <%= f.label :is_accessible %>
      <%= f.check_box :is_accessible, class: "form-check-input" %>
    </div>
    <div class="mb-3">
      <%= f.label :is_available %>
      <%= f.check_box :is_available, class: "form-check-input" %>
    </div>
  </div>

  <div class="mb-3">
    <%= f.submit nil, class: "btn btn-primary" %>
  </div>
<% end %>
